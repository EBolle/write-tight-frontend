---
import Layout from "../layouts/Layout.astro";
import Pos from "../components/Pos.astro";
---

<Layout title="Welcome to write-tight">
  <main>
    <div
      id="container"
      class="container max-w-6xl mx-auto mt-24 text-gray-500 text-lg"
    >
      <div class="flex flex-col">
        <div class="flex justify-between">
          <div>
            <h2 class="text-lg text-orange-500 font-medium mb-4">
              POS explanations (<a
                class="text-blue-500 underline px-1"
                href="https://universaldependencies.org/u/pos/"
                target="_blank">source</a
              >)
            </h2>
            <Pos />
          </div>
          <div>
            <textarea
              id="text-area"
              rows="5"
              cols="60"
              placeholder="Please enter your text here.."
              class="p-6 border border-gray-300 outline-none resize-none overflow-auto"
            ></textarea>
            <div id="output-container" class="flex flex-col space-y-2"></div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script src="../scripts/script.js"></script>
