---
import Layout from "../layouts/Layout.astro";
import Welcome from "../components/Welcome.astro";
import Pos from "../components/Pos.astro";
import Footer from "../components/Footer.astro";

const leftBasis = "basis-2/3";
const rightBasis = "basis-1/3";
---

<Layout title="Welcome to write-tight">
  <main>
    <div class="flex flex-col max-w-5xl mx-auto">
      <Welcome />
      <div class="flex flex-row space-x-2">
        <div class={leftBasis}>
          <textarea
            id="text-area"
            rows="5"
            cols="55"
            placeholder="Please enter your text here.."
            class="text-lg text-gray-500 p-6 border-2 border-orange-300 outline-none resize-none overflow-auto"
          ></textarea>
        </div>
        <div class:list={[rightBasis, "my-auto"]}>
          <button
            id="posButton"
            type="button"
            class="text-white text-lg bg-orange-400 hover:bg-orange-600 px-6 py-2 rounded-3xl"
          >
            POS explanation
          </button>
        </div>
      </div>
      <div class="flex flex-row space-x-2 max-h-[28rem] overflow-auto">
        <div class={leftBasis}>
          <div
            id="output-container"
            class="flex flex-col space-y-2 text-lg text-gray-600"
          >
          </div>
        </div>
        <div id="posExplanation" class:list={[rightBasis, "hidden"]}>
          <Pos />
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script src="../scripts/script.js"></script>
